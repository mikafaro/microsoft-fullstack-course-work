@page "/eventdetails/{id:guid}"

@inject EventEaseApp.Services.EventService EventService;

@using EventEaseApp.Components

<h3>Event Details</h3>

<EventCard eventDetails="eventDetails"/>

@code {
    [Parameter]
    public Guid Id { get; set; }

    private EventEaseApp.Models.Event? eventDetails;

    protected override async Task OnInitializedAsync()
    {
        eventDetails = await EventService.GetEventByIdAsync(Id);
    }
}